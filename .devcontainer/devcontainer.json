{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.10-bookworm",
    "features": {},
    "postCreateCommand": "rm -rf ~/.ssh/* && pipx install poetry && sudo /usr/local/py-utils/bin/poetry config virtualenvs.create false && sudo /usr/local/py-utils/bin/poetry install --no-root && ansible-galaxy install -r requirements.yml",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "redhat.ansible",
                "ms-python.black-formatter",
                "ms-python.mypy-type-checker",
                "charliermarsh.ruff",
                "GitHub.copilot",
                "GitHub.vscode-pull-request-github",
                "GitHub.copilot-chat",
                "github.vscode-github-actions",
                "ms-python.isort",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "ms-python.debugpy",
                "redhat.vscode-yaml"
            ]
        }
    }
}
